%h1 Listing histories

%table
  %thead
    %tr
      %th Date
      %th Team
      %th Result
      %th Starter
      %th Location
      %th
      %th
      %th

  %tbody
    - @histories.each do |history|
      %tr
        %td= history.date
        %td= history.team
        %td= history.result
        %td= history.starter
        %td= history.location
        %td= link_to 'Show', history
        %td= link_to 'Edit', edit_history_path(history)
        %td= link_to 'Destroy', history, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

